<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp">
    
    <ImageView
        android:id="@+id/image_item_nearfriend_list"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/image"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_item_nearfriend_list"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    		<TextView 
        		android:id="@+id/name_item_nearfriend_list"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="5dp"
        		android:textSize="18sp"
        		android:textStyle="bold"
        		android:text="NULL"/>
    		<ImageView
        		android:id="@+id/sex_item_nearfriend_list"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:src="@drawable/ic_sex_male" />
		</LinearLayout>
    	<TextView
    	    android:id="@+id/distance_item_nearfriend_list"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="5dp"
        	android:layout_marginTop="3dp"
        	android:text="100米以内 "/>
    </LinearLayout>
    <TextView 
        android:id="@+id/signname_item_nearfriend_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/other_item_nearfriend_list"
        android:layout_marginRight="3dp"
        android:textColor="#808080"
        android:background="#C0C0C0"
        android:textSize="12sp"
        android:maxLength="8"
        android:maxLines="2"
        android:text="好好学习，天天向上"/>
    <ImageView
        android:id="@+id/other_item_nearfriend_list"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_centerVertical="true"
  	    android:layout_alignParentRight="true"
  	    android:layout_marginRight="5dp"
  	    android:src="@drawable/bakchat_submenu_normal"/>

</RelativeLayout>