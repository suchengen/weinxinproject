<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/tab3_main">
    
	<RelativeLayout
    	android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/webviewtab_bg" >
       	<TextView
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_centerInParent="true"
            android:text="发现"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
       	
    </RelativeLayout>
	<RelativeLayout
  		android:id="@+id/btn_friends"
  	    android:layout_width="match_parent"
  	    android:layout_height="50dp"
  	    android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:layout_marginTop="15dp"
  	    android:background="@drawable/btn_style_grey_normal">
  	    
  	    <ImageView
  	    	android:id="@+id/btn_friends_image"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:layout_marginLeft="10dp"
  	        android:layout_centerVertical="true"
  	        android:src="@drawable/more_setting"/>
  	    <TextView
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:layout_toRightOf="@id/btn_friends_image"
  	        android:layout_marginLeft="10dp"
  	        android:layout_centerVertical="true"
  	        android:text="朋友圈"
  	        android:textSize="16sp"
  	        android:textStyle="bold"/>
  	    <ImageView 
  	       	android:layout_width="wrap_content"
  	       	android:layout_height="wrap_content"
  	        android:layout_alignParentRight="true"
  	        android:layout_marginRight="5dp"
  	        android:layout_centerVertical="true"
  	        android:src="@drawable/bakchat_submenu_normal"/>
  	</RelativeLayout>
  	
	<LinearLayout
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:layout_marginTop="15dp"
		android:orientation="vertical"
		android:background="@drawable/btn_style_grey_normal">
  	    <RelativeLayout
  	        android:id="@+id/btn_scanfriend"
  	        android:layout_width="match_parent"
  	        android:layout_height="45dp">
  	        <ImageView
  	            android:id="@+id/btn_scanfriend_image"
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_marginLeft="10dp"
  	            android:layout_centerVertical="true"
  	            android:src="@drawable/more_my_album"/>
  	        <TextView
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_toRightOf="@id/btn_scanfriend_image"
  	            android:layout_marginLeft="10dp"
  	            android:layout_centerVertical="true"
  	            android:text="扫一扫"
  	            android:textSize="16sp"
  	            android:textStyle="bold"/>
  	        <ImageView 
  	        	android:layout_width="wrap_content"
  	        	android:layout_height="wrap_content"
  	        	android:layout_alignParentRight="true"
  	        	android:layout_marginRight="5dp"
  	        	android:layout_centerVertical="true"
  	        	android:src="@drawable/bakchat_submenu_normal"/>
  	    </RelativeLayout>
  	    <View
			android:layout_width="fill_parent" 
			android:layout_height="1dip" 
			android:background="#C0C0C0"/>
  	    <RelativeLayout
  	        android:id="@+id/btn_flashfriend"
  	        android:layout_width="match_parent"
  	        android:layout_height="45dp">
  	        <ImageView
  	            android:id="@+id/btn_flashfriend_image"
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_marginLeft="10dp"
  	            android:layout_centerVertical="true"
  	            android:src="@drawable/more_my_favorite"/>
  	        <TextView
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_toRightOf="@id/btn_flashfriend_image"
  	            android:layout_marginLeft="10dp"
  	            android:layout_centerVertical="true"
  	            android:text="摇一摇"
  	            android:textSize="16sp"
  	            android:textStyle="bold"/>
  	        <ImageView 
  	        	android:layout_width="wrap_content"
  	        	android:layout_height="wrap_content"
  	        	android:layout_alignParentRight="true"
  	        	android:layout_marginRight="5dp"
  	        	android:layout_centerVertical="true"
  	        	android:src="@drawable/bakchat_submenu_normal"/>
  	    </RelativeLayout>
  	</LinearLayout>
  	
	<LinearLayout
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:layout_marginTop="15dp"
		android:orientation="vertical"
		android:background="@drawable/btn_style_grey_normal">
  	    <RelativeLayout
  	        android:id="@+id/btn_nearfriend"
  	        android:layout_width="match_parent"
  	        android:layout_height="45dp">
  	        <ImageView
  	            android:id="@+id/btn_nearfriend_image"
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_marginLeft="10dp"
  	            android:layout_centerVertical="true"
  	            android:src="@drawable/more_my_album"/>
  	        <TextView
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_toRightOf="@id/btn_nearfriend_image"
  	            android:layout_marginLeft="10dp"
  	            android:layout_centerVertical="true"
  	            android:text="附近的人"
  	            android:textSize="16sp"
  	            android:textStyle="bold"/>
  	        <ImageView 
  	        	android:layout_width="wrap_content"
  	        	android:layout_height="wrap_content"
  	        	android:layout_alignParentRight="true"
  	        	android:layout_marginRight="5dp"
  	        	android:layout_centerVertical="true"
  	        	android:src="@drawable/bakchat_submenu_normal"/>
  	    </RelativeLayout>
  	    <View
			android:layout_width="fill_parent" 
			android:layout_height="1dip" 
			android:background="#C0C0C0"/>
  	    <RelativeLayout
  	        android:id="@+id/btn_floater"
  	        android:layout_width="match_parent"
  	        android:layout_height="45dp">
  	        <ImageView
  	            android:id="@+id/btn_floater_image"
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_marginLeft="10dp"
  	            android:layout_centerVertical="true"
  	            android:src="@drawable/more_my_favorite"/>
  	        <TextView
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_toRightOf="@id/btn_floater_image"
  	            android:layout_marginLeft="10dp"
  	            android:layout_centerVertical="true"
  	            android:text="漂流瓶"
  	            android:textSize="16sp"
  	            android:textStyle="bold"/>
  	        <ImageView 
  	        	android:layout_width="wrap_content"
  	        	android:layout_height="wrap_content"
  	        	android:layout_alignParentRight="true"
  	        	android:layout_marginRight="5dp"
  	        	android:layout_centerVertical="true"
  	        	android:src="@drawable/bakchat_submenu_normal"/>
  	    </RelativeLayout>
  	</LinearLayout>
  	
	<RelativeLayout
  		android:id="@+id/btn_games"
  	    android:layout_width="match_parent"
  	    android:layout_height="50dp"
  	    android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:layout_marginTop="15dp"
  	    android:background="@drawable/btn_style_grey_normal">
  	    
  	    <ImageView
  	    	android:id="@+id/btn_games_image"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:layout_marginLeft="10dp"
  	        android:layout_centerVertical="true"
  	        android:src="@drawable/more_setting"/>
  	    <TextView
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:layout_toRightOf="@id/btn_games_image"
  	        android:layout_marginLeft="10dp"
  	        android:layout_centerVertical="true"
  	        android:text="游戏中心"
  	        android:textSize="16sp"
  	        android:textStyle="bold"/>
  	    <ImageView 
  	       	android:layout_width="wrap_content"
  	       	android:layout_height="wrap_content"
  	        android:layout_alignParentRight="true"
  	        android:layout_marginRight="5dp"
  	        android:layout_centerVertical="true"
  	        android:src="@drawable/bakchat_submenu_normal"/>
  	</RelativeLayout>
</LinearLayout>